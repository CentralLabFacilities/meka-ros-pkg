<?xml version="1.0"?>
<robot>
 <macro name="m3_torso_transmission">  
  <transmission name="torso_j0_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="torso_j0">
      <hardwareInterface>${hw_interface}</hardwareInterface>
    </joint>
    <actuator name="torso_j0_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>
  
  <transmission name="torso_j1_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="torso_j1">
      <hardwareInterface>${hw_interface}</hardwareInterface>
    </joint>
    <actuator name="torso_j1_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>
 </macro>   
</robot>
